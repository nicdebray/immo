<div class="col-xs-12 col-lg-10 offset-lg-1 login-card">
  <div class="card">
    <h2 id="login-title">Se connecter</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: false,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me,
                    label: "Se souvenir",
                    as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn btn-success btn-rounded btn-login" %>
      </div>
    <% end %>
    <div class="login-form-other-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
