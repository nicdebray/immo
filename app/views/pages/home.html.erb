    <h1>Rendements locatifs</h1>
    <h2>Calculez facilement le rendement locatif de vos biens immobiliers</h2>
    <p> <%= link_to 'New Project', new_project_path, class: 'btn btn-primary btn-homepage' %> </p>
    <p> <%= link_to 'All My Projects', projects_path, class: 'btn btn-primary btn-homepage' %> </p>

    <!-- estimator block start  -->
    <div id="homepage-estimator">
      <div id="action-title-estimator">Quick estimate:</div>
      <div id="action-estimator">
        <div class="description-estimator selected-estimator">Rental yield</div>
        <div class="description-estimator">Monthly Rent</div>
        <div class="description-estimator">Purchase price</div>
      </div>
      <div id="estimator-content">
        <!-- rental yield estimator inputs start -->
        <div id="estimator-rental-yield" class="R  estimator-inputs">
          <div id="purchase-price-input" class="estimator-fields">
            <label for="purchase-price-input-estimator">Purchase price:</label>
            <input type="number" min="0" value="0" id="purchase-price-input-estimator" class="home-input-estimator">
          </div>
          <div id="extra-work-input" class="estimator-fields">
            <label for="extra-works-input-estimator">Extra works:</label>
            <input type="number" min="0" value="0" id="extra-works-input-estimator" class="home-input-estimator">
          </div>
          <div id="monthly-rent-input" class="estimator-fields">
            <label for="monthly-rent-input-estimator">Monthly rent:</label>
            <input type="number" min="0" value="0" id="monthly-rent-input-estimator" class="home-input-estimator">
          </div>
        </div>
        <!-- rental yield estimator inputs end -->

        <!-- monthly rent estimator inputs start -->
        <div id="estimator-monthly-rent" class="M hidden estimator-inputs">
          <div id="purchase-price-input" class="estimator-fields">
            <label for="purchase-price-input-estimator">Purchase price:</label>
            <input type="number" min="0" value="0" id="purchase-price-input-estimator-mr" class="home-input-estimator">
          </div>
          <div id="extra-work-input" class="estimator-fields">
            <label for="extra-works-input-estimator">Extra works:</label>
            <input type="number" min="0" value="0" id="extra-works-input-estimator-mr" class="home-input-estimator">
          </div>
          <div id="rental-yield-input" class="estimator-fields">
            <label for="rental-yield-input-estimator">Rental yield:</label>
            <input type="number" min="0" value="0" id="rental-yield-input-estimator-mr" class="home-input-estimator">
          </div>
        </div>
        <!-- monthly rent estimator inputs end -->

        <!-- purchase price estimator inputs start -->
        <div id="estimator-purchase-price" class="P hidden estimator-inputs">
          <div id="monthly-rent-input" class="estimator-fields">
            <label for="monthly-rent-input-estimator">Monthly rent:</label>
            <input type="number" min="0" value="0" id="monthly-rent-input-estimator-pp" class="home-input-estimator">
          </div>
          <div id="extra-work-input" class="estimator-fields">
            <label for="extra-works-input-estimator">Extra works:</label>
            <input type="number" min="0" value="0" id="extra-works-input-estimator-pp" class="home-input-estimator">
          </div>
          <div id="rental-yield-input" class="estimator-fields">
            <label for="rental-yield-input-estimator">Rental yield:</label>
            <input type="number" min="0" value="0" id="rental-yield-input-estimator-pp" class="home-input-estimator">
          </div>
        </div>
        <!-- purchase price estimator inputs end -->


        <div id="result-estimator" class="estimator-fields">
          <div id="result-estimator10"></div>
          <div id="result-estimator11"></div>
          <div id="result-estimator12"></div>
        </div>
      </div>
      <div id="estimator-checker">
        <button class="btn btn-success" id="estimator-checker-btn"> Estimate</button>
      </div>
    </div>
    <!-- estimator block end -->
<%= javascript_pack_tag 'estimator_homepage' %>
